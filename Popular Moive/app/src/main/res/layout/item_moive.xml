<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="14dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/img_movie_photo"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_centerVertical="true"
            android:src="@drawable/img_blade_movie" />

        <TextView
            android:id="@+id/tv_movie_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="17dp"
            android:layout_toRightOf="@id/img_movie_photo"
            android:layout_toEndOf="@id/img_movie_photo"
            android:text="@string/blade_title"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/tv_movie_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_movie_title"
            android:layout_alignStart="@id/tv_movie_title"
            android:layout_below="@id/tv_movie_title"
            android:layout_marginTop="10dp"
            android:text="@string/blade_type"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_movie_popular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_movie_type"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/img_movie_photo"
            android:layout_toRightOf="@id/img_movie_photo"
            android:text="@string/blade_popular"
            android:textColor="@android:color/darker_gray" />


        <TextView
            android:id="@+id/tv_rating"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@id/img_movie_photo"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/ic_favorite"
            android:gravity="center"
            android:text="7.5"
            android:textColor="@android:color/white" />


        <ImageView
            android:id="@+id/iv_fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/img_movie_photo"
            android:layout_alignRight="@+id/img_movie_photo"
            android:layout_alignEnd="@+id/img_movie_photo"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_favorite" />

        <ImageView
            android:id="@+id/iv_star1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_movie_popular"
            android:layout_alignStart="@id/tv_movie_popular"
            android:layout_below="@id/tv_movie_popular"
            android:src="@drawable/ic_star"
            android:tint="@color/primary" />

        <ImageView
            android:id="@+id/iv_star2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_movie_popular"
            android:layout_toEndOf="@id/iv_star1"
            android:layout_toRightOf="@id/iv_star1"
            android:src="@drawable/ic_star"
            android:tint="@color/primary" />

        <ImageView
            android:id="@+id/iv_star3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_movie_popular"
            android:layout_toEndOf="@id/iv_star2"
            android:layout_toRightOf="@id/iv_star2"
            android:src="@drawable/ic_star"
            android:tint="@color/primary" />

        <ImageView
            android:id="@+id/iv_star4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_movie_popular"
            android:layout_toEndOf="@id/iv_star3"
            android:layout_toRightOf="@id/iv_star3"
            android:src="@drawable/ic_star"
            android:tint="@color/primary" />

        <ImageView
            android:id="@+id/iv_star5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_movie_popular"
            android:layout_toEndOf="@id/iv_star4"
            android:layout_toRightOf="@id/iv_star4"
            android:src="@drawable/ic_star"
            android:tint="@color/primary" />

        <ImageView
            android:id="@+id/iv_star6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_movie_popular"
            android:layout_toEndOf="@id/iv_star5"
            android:layout_toRightOf="@id/iv_star5"
            android:src="@drawable/ic_star"
            android:tint="@color/primary" />

        <Button
            android:id="@+id/btn_movie_overview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="6dp"
            android:layout_marginEnd="6dp"
            android:background="@color/colorPrimary"
            android:text="@string/btn_overview"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />


    </RelativeLayout>

</android.support.v7.widget.CardView>
